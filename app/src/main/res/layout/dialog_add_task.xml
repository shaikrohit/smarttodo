<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dialog_padding">

    <TextView
        android:id="@+id/textViewDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:text="@string/add_task_title"
        android:textColor="@color/text_primary_light"
        android:textSize="@dimen/text_size_title"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayoutTitle"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:hint="@string/task_title_hint"
        app:helperText="@string/title_required"
        app:helperTextTextColor="@color/error_color_state_list">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:maxLines="2" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayoutDescription"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:hint="@string/task_description_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="4"
            android:minLines="2" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_small"
        android:text="@string/priority"
        android:textColor="@color/text_primary_light"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radioGroupPriority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_large"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioLowPriority"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="@string/priority_low" />

        <RadioButton
            android:id="@+id/radioMediumPriority"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/priority_medium" />

        <RadioButton
            android:id="@+id/radioHighPriority"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/priority_high" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_small"
        android:text="@string/task_type"
        android:textColor="@color/text_primary_light"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupTaskType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        app:singleSelection="true"
        app:singleLine="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipCreative"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_type_creative" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAnalytical"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_type_analytical" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAdministrative"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_type_administrative" />
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/textViewSelectedDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_small"
        android:gravity="center"
        android:textColor="@color/text_primary_light"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSelectDate"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_small"
            android:layout_weight="1"
            android:text="@string/select_date" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSelectTime"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_weight="1"
            android:text="@string/select_time" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/spacing_small"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/set_reminder"
            android:textColor="@color/text_primary_light"
            android:textSize="@dimen/text_size_large" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/set_reminder" />

    </LinearLayout>

    <!-- Pre-Reminder Section -->
    <LinearLayout
        android:id="@+id/preReminderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_pre_reminder"
            android:textColor="@color/text_primary_light"
            android:textSize="@dimen/text_size_medium"
            android:layout_marginBottom="@dimen/spacing_extra_small"/>

        <Spinner
            android:id="@+id/spinnerPreReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/pre_reminder_options"
            android:paddingTop="@dimen/spacing_extra_small"
            android:paddingBottom="@dimen/spacing_extra_small" />

        <TextView
            android:id="@+id/textViewCustomPreReminderDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/accent"
            android:textSize="@dimen/text_size_small"
            android:layout_marginTop="@dimen/spacing_extra_small"
            android:visibility="gone"
            tools:text="Custom (45 min before)" />
    </LinearLayout>

    <!-- Sound Selection Section -->
    <LinearLayout
        android:id="@+id/soundSelectionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:visibility="gone" >

        <TextView
            android:id="@+id/textViewSelectSound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_reminder_sound"
            android:textColor="@color/primary"
            android:textSize="@dimen/text_size_medium"
            android:paddingVertical="@dimen/spacing_small"
            android:drawablePadding="@dimen/spacing_small"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            app:drawableStartCompat="@android:drawable/ic_menu_edit" /> <!-- Replaced ic_music_note with a system placeholder -->

        <TextView
            android:id="@+id/textViewSelectedSoundName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary_light"
            android:textSize="@dimen/text_size_small"
            android:layout_marginTop="@dimen/spacing_extra_small"
            android:visibility="gone"
            tools:text="Selected: Alarm Clock" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCancel"
            android:textColor="@color/primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_small"
            android:text="@string/cancel" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save_task" />
    </LinearLayout>
</LinearLayout>
