<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/textViewDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notification_settings_title"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:layout_marginBottom="16dp"/>

    <RadioGroup
        android:id="@+id/radioGroupSoundMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/radioButtonDefaultSound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notification_sound_mode_default"/>

        <RadioButton
            android:id="@+id/radioButtonCustomSound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notification_sound_mode_custom"/>

        <RadioButton
            android:id="@+id/radioButtonSilent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notification_sound_mode_silent"/>
    </RadioGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSelectSound"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notification_select_custom_sound"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textCurrentSound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notification_current_sound_prefix"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayoutSnoozeDuration"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:hint="@string/notification_snooze_duration_label">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextSnoozeDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="3" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonClose"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/dialog_close" />

</LinearLayout>
