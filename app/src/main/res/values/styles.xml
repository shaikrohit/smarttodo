<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- NOTE: Do NOT redefine library base styles (e.g. Widget.MaterialComponents) to avoid merge conflicts. -->

    <!-- Translucent theme for notification action dialogs -->
    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- Alias to keep existing manifest reference backward compatible -->
    <style name="Theme.App.Translucent" parent="Theme.AppCompat.Translucent" />

    <!-- Text Input Layout Style -->
    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">?attr/colorSecondary</item>
        <item name="boxStrokeColor">?attr/colorSecondary</item>
        <item name="helperTextTextColor">?attr/colorError</item>
        <item name="errorTextColor">?attr/colorError</item>
        <item name="counterTextColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.App.Button.Elevated" parent="Widget.Material3.Button.ElevatedButton">
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="Widget.App.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!-- Card View Style -->
    <style name="Widget.App.Card.Elevated" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Chip Style -->
    <style name="Widget.App.Chip.Modern" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <!-- Bottom Sheet Style -->
    <style name="Widget.App.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.App.TextInputLayout" parent="TextAppearance.Material3.BodyLarge" />
    <style name="TextAppearance.App.Headline1" parent="TextAppearance.Material3.HeadlineLarge" />
    <style name="TextAppearance.App.Headline2" parent="TextAppearance.Material3.HeadlineMedium" />
    <style name="TextAppearance.App.Headline3" parent="TextAppearance.Material3.HeadlineSmall" />
    <style name="TextAppearance.App.Headline4" parent="TextAppearance.Material3.TitleLarge" />
    <style name="TextAppearance.App.Headline5" parent="TextAppearance.Material3.TitleMedium" />
    <style name="TextAppearance.App.Headline6" parent="TextAppearance.Material3.TitleSmall" />
    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.Material3.BodyLarge" />
    <style name="TextAppearance.App.Subtitle2" parent="TextAppearance.Material3.BodyMedium" />
    <style name="TextAppearance.App.Body1" parent="TextAppearance.Material3.BodyLarge" />
    <style name="TextAppearance.App.Body2" parent="TextAppearance.Material3.BodyMedium" />
    <style name="TextAppearance.App.Button" parent="TextAppearance.Material3.LabelLarge" />
    <style name="TextAppearance.App.Caption" parent="TextAppearance.Material3.LabelMedium" />
    <style name="TextAppearance.App.Overline" parent="TextAppearance.Material3.LabelSmall" />

    <style name="TextAppearance.App.TaskTitle" parent="TextAppearance.Material3.TitleMedium"/>
    <style name="TextAppearance.App.TaskDescription" parent="TextAppearance.Material3.BodyMedium"/>
    <style name="TextAppearance.App.TaskTime" parent="TextAppearance.Material3.LabelSmall" />

    <!-- Merged from widget_styles.xml -->
    <style name="Widget.App" parent="" />

    <style name="Widget.App.Card.Soft" parent="Widget.Material3.CardView.Filled">
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="Widget.App.Chip.Soft" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">?attr/colorSurface</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.App.Button.Soft" parent="Widget.Material3.Button.TextButton">
        <item name="android:background">@drawable/soft_button_background</item>
    </style>

    <style name="Widget.App.Spinner" parent="@android:style/Widget.Material.Spinner">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:popupBackground">@color/colorSurface</item>
    </style>

    <style name="Widget.App.Button.SnoozeOption" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="cornerRadius">16dp</item>
    </style>
</resources>
