<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SmartToDo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnBackground">@color/text_primary_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_light</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="colorError">@color/error_color_state_list</item>
    </style>

    <!-- Simple Button Styles for Dialog -->
    <style name="Widget.App.Button.Dialog" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Widget.App.Button.Outlined.Dialog" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Widget.App.Button.Text.Dialog" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.SmartToDo.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorError">@color/error_color_state_list</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item> <!-- Explicitly setting colorOnSurface -->
        <item name="colorOnSurfaceVariant">@color/text_secondary_light</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>

        <!-- Robust Text Appearance Attributes -->
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:textColorSecondary">?attr/colorOnSurfaceVariant</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MaterialComponents.Body1</item>

        <!-- Override default button styles for this dialog theme -->
        <item name="materialButtonStyle">@style/Widget.App.Button.Dialog</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.App.Button.Outlined.Dialog</item>
        <item name="borderlessButtonStyle">@style/Widget.App.Button.Text.Dialog</item>
    </style>
</resources>
