<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="?attr/colorSurface">

    <TextView
        android:id="@+id/textViewDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/add_task_title"
        android:textAppearance="@style/TextAppearance.App.Headline6"
        android:textColor="?attr/colorOnSurface" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayoutTitle"
        style="@style/Widget.App.TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="@string/task_title_hint"
        app:helperText="@string/title_required"
        app:startIconDrawable="@android:drawable/ic_menu_edit"
        app:startIconTint="?attr/colorSecondary"
        app:helperTextTextColor="?attr/colorError">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:maxLines="2"
            android:textColor="?attr/colorOnSurface"
            android:alpha="1.0"
            android:textAppearance="@style/TextAppearance.App.TextInputLayout" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayoutDescription"
        style="@style/Widget.App.TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="@string/task_description_hint"
        app:startIconDrawable="@android:drawable/ic_menu_sort_by_size"
        app:startIconTint="?attr/colorSecondary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="4"
            android:minLines="2"
            android:textColor="?attr/colorOnSurface"
            android:alpha="1.0"
            android:textAppearance="@style/TextAppearance.App.TextInputLayout" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/priority"
        android:textAppearance="@style/TextAppearance.App.Subtitle2"
        android:textColor="?attr/colorOnSurface" />

    <!-- Enhanced Priority Selection -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupPriority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:chipSpacingHorizontal="8dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipLowPriority"
            style="@style/Widget.App.Chip.Modern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/priority_low"
            android:checked="true"
            app:chipBackgroundColor="@color/priority_low"
            app:chipIconVisible="false"
            app:chipStrokeWidth="0dp"
            android:textColor="@color/colorWhite" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipMediumPriority"
            style="@style/Widget.App.Chip.Modern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/priority_medium"
            app:chipBackgroundColor="@color/priority_medium"
            app:chipIconVisible="false"
            app:chipStrokeWidth="0dp"
            android:textColor="@color/colorWhite" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipHighPriority"
            style="@style/Widget.App.Chip.Modern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/priority_high"
            app:chipBackgroundColor="@color/priority_high"
            app:chipIconVisible="false"
            app:chipStrokeWidth="0dp"
            android:textColor="@color/colorWhite" />
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/task_type"
        android:textAppearance="@style/TextAppearance.App.Subtitle2"
        android:textColor="?attr/colorOnSurface" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupTaskType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:singleSelection="true"
        app:singleLine="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipCreative"
            style="@style/Widget.App.Chip.Modern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_type_creative" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAnalytical"
            style="@style/Widget.App.Chip.Modern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_type_analytical" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAdministrative"
            style="@style/Widget.App.Chip.Modern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_type_administrative" />
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/textViewSelectedDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.App.Subtitle1"
        android:textColor="?attr/colorSecondary"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="September 25, 2023 at 3:00 PM" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSelectDate"
            style="@style/Widget.App.Button.Elevated"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            app:icon="@android:drawable/ic_menu_my_calendar"
            android:text="@string/select_date" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSelectTime"
            style="@style/Widget.App.Button.Elevated"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            app:icon="@android:drawable/ic_menu_recent_history"
            android:text="@string/select_time" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/set_reminder"
            android:textAppearance="@style/TextAppearance.App.Subtitle2"
            android:textColor="?attr/colorOnSurface" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:thumbTint="@color/colorOrange"
            app:trackTint="@color/colorOrangeLight"
            android:contentDescription="@string/set_reminder" />

    </LinearLayout>

    <!-- Pre-Reminder Section -->
    <LinearLayout
        android:id="@+id/preReminderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_pre_reminder"
            android:textAppearance="@style/TextAppearance.App.Body2"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinnerPreReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/pre_reminder_options"
            android:padding="12dp"
            android:background="@drawable/spinner_background" />

        <TextView
            android:id="@+id/textViewCustomPreReminderDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorSecondary"
            android:textAppearance="@style/TextAppearance.App.Caption"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="Custom (45 min before)" />
    </LinearLayout>

    <!-- Sound Selection Section -->
    <LinearLayout
        android:id="@+id/soundSelectionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/textViewSelectSound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_reminder_sound"
            android:textAppearance="@style/TextAppearance.App.Subtitle2"
            android:textColor="?attr/colorOnSurface"
            android:paddingVertical="12dp"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            app:drawableStartCompat="@android:drawable/ic_lock_silent_mode_off" />

        <TextView
            android:id="@+id/textViewSelectedSoundName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.App.Caption"
            android:textColor="?attr/colorSecondary"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="Selected: Alarm Clock" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCancel"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:textColor="?attr/colorOnSurface"
            android:text="@string/cancel" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSave"
            style="@style/Widget.App.Button.Elevated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@android:drawable/ic_menu_save"
            android:text="@string/save_task" />
    </LinearLayout>
</LinearLayout>